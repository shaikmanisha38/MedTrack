}

.hamburger {
  display: none;
  font-size: 26px;
  background: none;
  border: none;
  color: #fff;
  cursor: pointer;
}

/* Mobile Styles */
@media (max-width: 768px) {
  .hamburger {
    display: block;
  }

  .nav-links {
    display: none;
    flex-direction: column;
    background: #009cbf;
    position: absolute;
    top: 60px; /* adjust if needed */
    right: 20px;
    width: 150px;
    border-radius: 8px;
    padding: 10px 0;
  }

  .nav-links.show {
    display: flex;
  }

  .nav-links li {
    text-align: center;
    margin: 10px 0;
  }
}

/* About Content */
.about-content {
  max-width: 950px;
  margin: 70px auto;
  padding: 0 20px;
  text-align: center;
}

.about-content h2 {
  color: #009cbf;
  margin-bottom: 15px;
  font-size: 2rem;
}

.about-content p {
  margin-bottom: 40px;
  color: #555;
  font-size: 1.1rem;
}

.highlights {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  justify-content: center;
}

.highlight-card {
  background: #e0f7fa;
  padding: 20px 30px;
  border-radius: 10px;
  box-shadow: 0 8px 20px rgba(0,0,0,0.1);
  font-size: 1.1rem;
  transition: transform 0.3s;
}

.highlight-card:hover {
  transform: translateY(-8px);
}

.highlight-card span {
  margin-left: 10px;
  font-weight: 600;
}

.member-card {
  background: #fff;
  padding: 20px;
  border-radius: 12px;
  box-shadow: 0 8px 20px rgba(0,0,0,0.1);
  text-align: center;
  width: 220px;
  transition: transform 0.3s;
}

.member-card:hover {
  transform: translateY(-10px);
}

.member-card img {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  object-fit: cover;
  margin-bottom: 15px;
  border: 4px solid #004d99;
}

.member-card h3 {
  margin-bottom: 5px;
  color: #004d99;
}

.member-card p {
  font-size: 0.95rem;
  color: #555;
}

/* Animations (reuse) */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}

/* Responsive */
@media (max-width: 768px) {
  .highlights {
    flex-direction: column;
  }

  .team-members {
    flex-direction: column;
    align-items: center;
  }

  .about-hero h1 {
    font-size: 2rem;
  }

  .about-hero p {
    font-size: 1rem;
  }
}

